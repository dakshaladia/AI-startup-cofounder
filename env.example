# AI Startup Co-Founder Environment Configuration

# =============================================================================
# API Keys & External Services
# =============================================================================

# Gemini API Key (required for LLM operations)
GEMINI_API_KEY=your_gemini_api_key_here

# Vector Database (choose one)
# For local development with FAISS
VECTOR_DB_TYPE=faiss
VECTOR_DB_PATH=./data/faiss_index

# For Pinecone (production)
# PINECONE_API_KEY=your_pinecone_api_key_here
# PINECONE_ENVIRONMENT=your_pinecone_environment
# PINECONE_INDEX_NAME=startup-cofounder

# For Weaviate (alternative)
# WEAVIATE_URL=http://localhost:8080
# WEAVIATE_API_KEY=your_weaviate_api_key

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL Database
DATABASE_URL=postgresql://user:password@localhost:5432/startup_cofounder

# Redis for task queue
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Application Settings
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# =============================================================================
# LLM Configuration
# =============================================================================

# Default LLM provider
LLM_PROVIDER=gemini
LLM_MODEL=gemini-1.5-pro
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000

# Local LLM (alternative)
# LOCAL_LLM_URL=http://localhost:11434
# LOCAL_LLM_MODEL=llama2

# =============================================================================
# Embedding Configuration
# =============================================================================

# Text embedding model
TEXT_EMBEDDING_MODEL=text-embedding-004
TEXT_EMBEDDING_DIMENSION=768

# Image embedding model
IMAGE_EMBEDDING_MODEL=clip-vit-base-patch32
IMAGE_EMBEDDING_DIMENSION=512

# =============================================================================
# Ingestion Settings
# =============================================================================

# Chunking configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# OCR settings
OCR_PROVIDER=tesseract
OCR_LANGUAGE=eng

# Image processing
IMAGE_MAX_SIZE=1024
IMAGE_QUALITY=85

# =============================================================================
# Evaluation Settings
# =============================================================================

# Scoring weights
MARKET_SIGNAL_WEIGHT=0.3
FEASIBILITY_WEIGHT=0.25
NOVELTY_WEIGHT=0.25
CRITIC_SEVERITY_WEIGHT=0.2

# Novelty detection
NOVELTY_THRESHOLD=0.7
VISUAL_NOVELTY_THRESHOLD=0.6

# =============================================================================
# Security & Rate Limiting
# =============================================================================

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Authentication (optional)
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# =============================================================================
# Logging & Monitoring
# =============================================================================

# Log level
LOG_LEVEL=INFO

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# Development Settings
# =============================================================================

# Auto-reload
AUTO_RELOAD=true

# Test database
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/startup_cofounder_test

# Mock services for testing
MOCK_LLM=false
MOCK_EMBEDDINGS=false
